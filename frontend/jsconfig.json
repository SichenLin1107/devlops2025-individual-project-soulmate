{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "jsx": "preserve",
    "checkJs": false
  },
  "include": ["src/**/*.vue", "src/**/*.js", "src/**/*.ts", "src/**/*.jsx", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.min.js"]
}
